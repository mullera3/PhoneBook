<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="421dp"
            android:id="@+id/recyclerView"
            android:layout_height="545dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" app:layout_constraintHorizontal_bias="0.0">
    </androidx.recyclerview.widget.RecyclerView>
    <TextView
            android:layout_width="236dp"
            android:layout_height="56dp" android:id="@+id/contactNameView"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/AddContactButton"
            android:layout_marginEnd="10dp" app:layout_constraintVertical_bias="0.0" android:hint="Enter Contact Name"/>
    <Button
            android:text="Add"
            android:layout_width="88dp"
            android:layout_height="61dp" android:id="@+id/AddContactButton"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/contactNameView"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:layout_width="235dp"
            android:layout_height="67dp" android:id="@+id/phoneNumberView"
            android:hint="Enter Phone Number" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/contactNameView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="19dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toStartOf="@+id/AddContactButton"
            android:layout_marginEnd="36dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.79"/>
</androidx.constraintlayout.widget.ConstraintLayout>